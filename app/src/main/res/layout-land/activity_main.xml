<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="45dp">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="890dp"
        android:layout_height="match_parent"
        android:rotation="90"
        android:scaleX="3"
        android:scaleY="3"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/naveda2"
        android:layout_width="200px"
        android:layout_height="100px"
        android:layout_marginStart="50dp"
        android:layout_marginTop="175dp"
        android:elevation="10dp"
        android:rotation="0"
        android:src="@drawable/naveda2"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/navecap"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_marginStart="130dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="20dp"

        android:layout_marginBottom="100dp"
        android:elevation="10dp"
        android:rotation="0"
        android:src="@drawable/navecap"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/naveda4"
        android:layout_width="400px"
        android:layout_height="100px"
        android:layout_marginStart="270dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="0dp"

        android:layout_marginBottom="100dp"
        android:elevation="10dp"
        android:rotation="0"
        android:src="@drawable/naveda4"
        android:visibility="visible" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="1000px"
        android:layout_height="1000px"
        android:layout_marginStart="485dp"

        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="227dp"

        android:background="@drawable/griglia"
        android:numColumns="10" />

    <ImageView
        android:id="@+id/navedaottorino"
        android:layout_width="400px"
        android:layout_height="200px"
        android:layout_marginStart="270dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="0dp"

        android:layout_marginBottom="100dp"
        android:elevation="10dp"
        android:rotation="0"
        android:src="@drawable/naveottorino"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnConferma"
        android:layout_width="132dp"
        android:layout_height="69dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/orbitron_bold"
        android:foreground="@drawable/bordo_rettangolo"
        android:text="GIOCA"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnRipristina"
        android:layout_width="188dp"
        android:layout_height="74dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/orbitron_bold"
        android:foreground="@drawable/bordo_rettangolo"
        android:text="RIPRISTINA NAVI"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/naveangolo"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginStart="150dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="0dp"

        android:layout_marginBottom="100dp"
        android:elevation="10dp"
        android:rotation="0"
        android:src="@drawable/naveangolo"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/navel"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="0dp"

        android:layout_marginBottom="100dp"
        android:elevation="10dp"
        android:rotation="0"
        android:src="@drawable/navel"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/orbitron_bold"
        android:foreground="@drawable/bordo_rettangolo_textbox"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:text="POSIZIONA NAVI"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_regole"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="370dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/orbitron_bold"
        android:foreground="@drawable/bordo_rettangolo"
        android:onClick="btn_regole_pressed"
        android:text="Regole"
        android:textColor="@color/white" />
</FrameLayout>

