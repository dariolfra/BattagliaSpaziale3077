<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="45dp">

    <!-- ImageView per l'immagine della nave -->

    <!-- GridView -->

    <ImageView
        android:id="@+id/navel"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_marginStart="5dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="0dp"

        android:layout_marginBottom="100dp"
        android:elevation="10dp"
        android:src="@drawable/navel"
        android:visibility="visible"
        android:rotation="0"/>

    <ImageView
        android:id="@+id/naveda2"
        android:layout_width="200px"
        android:layout_height="100px"
        android:layout_marginStart="45dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"

        android:layout_marginBottom="100dp"
        android:src="@drawable/naveda2"
        android:visibility="visible"
        android:elevation="10dp"
        android:rotation="0"/>

    <ImageView
        android:id="@+id/navecap"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"

        android:layout_marginBottom="100dp"
        android:elevation="10dp"
        android:src="@drawable/navecap"
        android:visibility="visible"
        android:rotation="0"/>

    <ImageView
        android:id="@+id/naveangolo"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginStart="150dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="0dp"

        android:layout_marginBottom="100dp"
        android:elevation="10dp"
        android:src="@drawable/naveangolo"
        android:visibility="visible"
        android:rotation="0"/>

    <ImageView
        android:id="@+id/naveda4"
        android:layout_width="400px"
        android:layout_height="100px"
        android:layout_marginStart="250dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"

        android:layout_marginBottom="100dp"
        android:src="@drawable/naveda4"
        android:visibility="visible"
        android:elevation="10dp"
        android:rotation="0"/>
    <ImageView
        android:id="@+id/navedaottorino"
        android:layout_width="400px"
        android:layout_height="200px"
        android:layout_marginStart="250dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="0dp"

        android:layout_marginBottom="100dp"
        android:src="@drawable/naveottorino"
        android:visibility="visible"
        android:elevation="10dp"
        android:rotation="0"/>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="1000px"
        android:layout_height="1000px"
        android:layout_marginStart="15dp"

        android:layout_marginTop="123dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="227dp"

        android:background="@drawable/griglia"
        android:numColumns="10" />

</FrameLayout>

